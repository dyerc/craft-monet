{
    "name": "dyerc/craft-monet",
    "description": "Generate ultra efficient image placeholders in an asset field.",
    "type": "craft-plugin",
    "version": "1.0.1",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "monet",
        "image-placeholder",
        "placeholder",
        "lazyload"
    ],
    "support": {
        "docs": "https://github.com/dyerc/craft-monet/blob/master/README.md",
        "issues": "https://github.com/dyerc/craft-monet/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Dyer",
            "homepage": "https://cdyer.co.uk"
        }
    ],
    "require": {
        "craftcms/cms": "^4.0.0",
        "ksubileau/color-thief-php": "^1.4",
        "php": "^8.0.2"
    },
    "autoload": {
        "psr-4": {
          "dyerc\\monet\\": "src/"
        }
    },
    "extra": {
        "name": "Monet",
        "handle": "monet",
        "developer": "Chris Dyer",
        "developerUrl": "https://cdyer.co.uk",
        "documentationUrl": "https://github.com/dyerc/craft-monet/blob/master/README.md",
        "changelogUrl": "https://raw.githubusercontent.com/dyerc/craft-monet/master/CHANGELOG.md",
        "class": "dyerc\\monet\\Monet"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "craftcms/phpstan": "dev-main"
    }
}
